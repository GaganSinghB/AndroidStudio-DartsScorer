            <!--                android:hint="Player 02"-->
            <!--                android:inputType="textPersonName"-->
            <!--                android:minHeight="48dp"-->
            <!--                android:textAlignment="center" />-->

            <TextView
                android:id="@+id/player01Name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/player02Name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player01Score"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="501"
                android:textAlignment="center"
                android:textColor="#2FFF00"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/player02Score"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="501"
                android:textAlignment="center"
                android:textSize="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player01Throws"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                android:layout_weight="1"
                android:text="."
                android:textAlignment="center"
                android:textSize="100dp" />

            <TextView
                android:id="@+id/player02Throws"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-80dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="100dp" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/numberLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dartBoardBG"
        app:layout_constraintVertical_bias="0.068">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Button1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/Button2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/Button3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="3"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/Button4"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:text="4"
                android:textAlignment="center"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/Button5"
